{{!-- layouts/base.hbs --}}

<!doctype html>
<html lang="en">
	<head>
		<title>
		{{#if title}}
			{{title}}
		{{else}}
			Base Page Title
		{{/if}}
		</title>

		{{#> head-block}}
		{{> includes/head }}
		{{/head-block}}

	</head>
	
	<body  class="checker">

	{{#> header-block}}
		{{> includes/header }}
	{{/header-block}}


	{{#> how-it-works }}
		{{> content/cont-how-it-works }}
	{{/how-it-works}}

  
	{{#> footer-block}}
		{{> includes/footer }}
	{{/footer-block}}

   
	{{#> scripts-block}}
		{{> includes/scripts }}
	{{/scripts-block}}
	</body>
</html>